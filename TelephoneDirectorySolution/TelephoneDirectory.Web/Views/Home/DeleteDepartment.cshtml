@model TelephoneDirectory.Entities.Department

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete @Model.Title Department</title>
</head>
<body>
    <h3>Are you sure you want to delete this department?</h3>
    <div>
        <h4>@Model.Title Department</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
               @Bootstrap.LinkButton("/Home/ListDepartment/", "info", "btn-md", "Edit Department", "arrow-left", " Back to Department List")
            </div>
        }
    </div>
</body>
</html>
